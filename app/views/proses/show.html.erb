<div class="row">
  <div class="small-9 small-centered columns" id="story-canvas">
    <div class="row">
      <div id="edit-links">
        <% if user_signed_in? %>
          <% if current_user == @prose.user %>
            <ul class="button-group round">
              <li class="button small"><%= link_to 'Edit', edit_prose_path(@prose)%></li>
              <li class="button small"><%= link_to 'Delete', prose_path(@prose), method: :delete%></li>
            </ul>
          <% else %>
            <div class="button small">
              <%= link_to 'Beta-Read!', edit_prose_path(@prose)%>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

    <div>
      <h1><%= @prose.title %></h1>
        <div class="prose-user">
          By <%= @prose.user.username %>
        </div>
      <% @prose.genres.each do |genre| %>
        <div class="prose-genre">
          <%= genre.name %>
        </div>
      <% end %>
    </div>

      <% unless @prose.versions.nil?%>
        <!-- Adding the Tab Version name -->
        <dl class="tabs">
          <% @prose.versions.each_with_index do |key, index| %>
            <dd><a href="#version<%= index+1%>">Version <%= index+1%></a></dd>
          <% end %>
        </dl>
        <!-- Adding the actual content, hidden beneath things -->
        <div class="tabs-content">
          <% @prose.all_versions.each_with_index do |version, index| %>
            <% unless version.nil? %>
              <div class="content" id="version<%= index%>"><%= version[:desc]%></div>
            <% end %>
          <% end %>
      <% end %>
          <div class='content active' id="version<%= @prose.versions.count%>"><%= @prose.description %></div>
        </div>
    <div>
      <%= link_to 'Back', :back %>
    </div>
  </div>
</div>
<dl class="tabs" data-tab>
  <dd class="active"><a href="#panel2-1">Tab 1</a></dd>
  <dd><a href="#panel2-2">Tab 2</a></dd>
  <dd><a href="#panel2-3">Tab 3</a></dd>
  <dd><a href="#panel2-4">Tab 4</a></dd>
</dl>
<div class="tabs-content">
  <div class="content active" id="panel2-1">
    <p>First panel content goes here...</p>
  </div>
  <div class="content" id="panel2-2">
    <p>Second panel content goes here...</p>
  </div>
  <div class="content" id="panel2-3">
    <p>Third panel content goes here...</p>
  </div>
  <div class="content" id="panel2-4">
    <p>Fourth panel content goes here...</p>
  </div>
</div>
