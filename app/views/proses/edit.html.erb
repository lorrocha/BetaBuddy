<%= simple_form_for @prose do |f| %>
  <%= f.error_notification %>

  <%= f.input :title %>
  <%= f.input :description, label: 'Story' %>
  <% if current_user == @prose.user %>
    <%= f.input :genres, collection: Genre.all.order(:name) %>
    <%= f.submit "Edit Prose" %>
  <% else %>
    <%= f.submit "Submit Review" %>
  <% end %>

<% end %>
